
@{
    ViewBag.Title = "timkiem";
    Layout = "~/Views/Shared/layout01.cshtml";
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Content/hinh.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Distressed&display=swap" rel="stylesheet">
}


<div class="container">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Hinhtrangchu/alpha_840x320.jpg" style="width: 100%" />
            </div>

            <div class="item">
                <img src="~/Hinhtrangchu/Trang_Manga-Comic_Mainbanner_T10_Slide_840x320.jpg" style="width: 100%" />
            </div>

            <div class="item">
                <img src="~/Hinhtrangchu/VNpay_Blackfriday_Cypermonday_840x320_.jpg" style="width: 100%" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--              -->
<hr />
<div class="container">
    <h1 class="h1" style="text-align:center">Danh sách sản phẩm </h1>
    <hr />
    <div class="row">

        @foreach (var sanpham in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="product-grid2">
                    <div class="product-image2">
                        <a href="/Truyen/Details/@sanpham.ProductID"><img src="@Url.Content(sanpham.ImagePro)" style="height:300px; width:200px;margin:10px; " /></a>
                        <ul class="social">

                            <li><a href="~/Login/FormLogin" data-tip="Đặt hàng"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                        <a class="add-to-cart" href="@Url.Action("FormLogin", "Login", new {id = sanpham.ProductID})">ĐẶT MUA</a>
                    </div>
                    <div class="product-content">
                        <a href="/Truyen/Details/@sanpham.ProductID">
                            <h4 class="card-title" style="text-align: center">@sanpham.NamePro</h4>
                        </a>
                        <div class="price">
                            Giá bán: @sanpham.Price VNĐ
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr>
