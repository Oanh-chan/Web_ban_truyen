@model IEnumerable<DeAn.Models.Product>
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_TheloaiLayoutPage1.cshtml";
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Content/hinh.css" rel="stylesheet" />
}

<div class="container">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Hinhtrangchu/alpha_840x320.jpg" style="width: 100%" />
            </div>

            <div class="item">
                <img src="~/Hinhtrangchu/Trang_Manga-Comic_Mainbanner_T10_Slide_840x320.jpg" style="width: 100%" />
            </div>

            <div class="item">
                <img src="~/Hinhtrangchu/VNpay_Blackfriday_Cypermonday_840x320_.jpg" style="width: 100%" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!--Setion 1 -->
    <div class="container-fluid">
        <div class="row" id="margin-section1">
            <div class="col-md-6 col-lg-3">
                <div style="margin: 10px auto; width: 90%;">
                    <h2 style="text-align:center">DANH SÁCH TRUYỆN NGÔN TÌNH</h2>
                    <hr />
                   
                        @foreach (var sanpham in Model)
                        {
                                    <a href="/Truyen/Details/@sanpham.ProductID"> <img class="card-img-top" src="~/Khoahocvientuong/@sanpham.ImagePro" /></a>
                                    <div class="card-body" style="text-align: left">
                                        <a href="/Truyen/Details/@sanpham.ProductID">
                                            <h4 class="card-title" style="text-align: center">@sanpham.NamePro</h4>
                                        </a>
                            </div>
                        }
                    
                </div>
            </div>
        </div>

    </div>
</div>

