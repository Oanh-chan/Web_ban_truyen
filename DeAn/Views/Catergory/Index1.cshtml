@model IEnumerable<DeAn.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align:center">DANH SÁCH TRUYỆN NGÔN TÌNH</h2>
    <hr />
    <div class="row">
        @foreach (var sanpham in Model)
        {
            <div class="col-lg-4 col-md-6 mb-0-3">
                <div class="card h-100">
                    <a href="/Catergory/Details/@sanpham.NameCate">@sanpham.NameCate </a>
                    <div class="card-body" style="text-align: left">
                        
                        
                        @Html.ActionLink("CHI TIẾT", "Details", new { id = sanpham.NameCate }, new { @class = "btn btn-primary" })
                    </div>
                </div>

            </div>
        }
    </div>
</div>

