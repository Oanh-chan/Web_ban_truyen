@model IEnumerable<DeAn.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}

<h2 style="text-align: center">Thể loại</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<div style="text-align:center">
    @using (Html.BeginForm("Index", "Category"))
    {
        <b>Tìm kiếm theo:</b>@Html.RadioButton("seachBy", "IDCate")<text>ID thể loại</text>
        @Html.RadioButton("seachBy", "NameCate")<text>Tên thể loại</text>
        @Html.RadioButton("seachBy", "None", true)<text>Toàn bộ</text><br />
        @Html.TextBox("seach")<input type="submit" value="Tìm kiếm" />
    }
</div>
<table class="table">
    <tr>
        <th>
          <b>ID thể loại</b>
        </th>
        <th>
          <b>Tên thể loại</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDCate }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCate }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDCate })
            </td>
        </tr>
    }

</table>
