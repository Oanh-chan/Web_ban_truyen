<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Content/hinh.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Distressed&display=swap" rel="stylesheet">
    <script src="~/Scripts/scripts.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" style="width:100px">Hamster</a>
            </div>
            <ul class="nav navbar-nav">
               
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Sắp xếp <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="~/Admin/Product/Index1">Thông tin sản phẩm</a></li>

                        <li><a href="~/Admin/Category/Index">Thông tin thể loại</a></li>
                        <li><a href="~/Admin/khachhang/Index">Thông tin người dùng</a></li>
                    </ul>
                </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">

                

                <li style="color:black; padding-top:15px">@Session["RoleUser"].ToString()</li>
                <li><a href="@Url.Action("Logout", "Login")"><span class="glyphicon glyphicon-log-out"></span> Đăng Xuất</a></li>


            </ul>
            
        </div>
    </nav>

    <div>
        <div id="div-containt">
            @RenderBody()
        </div>
    </div>
    <hr style="font-weight:bold"/>
    <div style="text-align: center">
        <footer>
           
            <p>&copy; @DateTime.Now.Year - Hamster</p>
        </footer>
    </div>

</body>
</html>
