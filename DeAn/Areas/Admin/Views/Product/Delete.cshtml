@model DeAn.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}



<h3 style="text-align:center">Bạn có chắc muốn xóa sản phẩm?</h3>
<div style="text-align:left; padding: 50px 50px">
    
    <hr />
    <dl class="dl-horizontal" >
        <dt style="text-align:center">
            <b>Tên Sản Phẩm</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NamePro)
        </dd>

        <dt style="text-align:center">
            <b>Mô tả</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DecriptionPro)
        </dd>

        <dt style="text-align:center">
            <b>Loại Sản Phẩm</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt style="text-align:center">
            <b>Đơn giá</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt style="text-align:center">
            <b>Hình Sản Phẩm</b>
        </dt>

        <dd>
            
                <img src="@Url.Content(Model.ImagePro)" style="height:300px; width:200px;margin:10px; " id="previewImage" />
                <input type="file" name="ImageUpload" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" />
               
            
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index1")
        </div>
    }
</div>
