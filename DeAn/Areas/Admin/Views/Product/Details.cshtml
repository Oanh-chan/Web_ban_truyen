@model DeAn.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">CHI TIẾT SẢN PHẨM</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImagePro)" style="height:300px; width:200px;margin:10px; " />

        </div>
        <div class="col-md-6">
            <h4 style="font-weight: bold;font-size:30px"> @Model.NamePro</h4>
            <p style="text-align: center;padding-top:15px">
                <span style="font-weight: bold; font-size:25px;padding-top:10px;padding-left:30px;text-align:center;color:black">Mô tả: </span> @Model.DecriptionPro
            </p>
            <p class="price" style="padding-top:15px">
                Giá bán: <span style="color:red; font-size: 24px;padding-left:15px">
                    @Model.Price VNĐ
                </span>
            </p>


        </div>

    </div>
    
</div>
<div>
    @Html.ActionLink("Trở về", "Index1")
</div>
