@model IEnumerable<DeAn.Models.Product>

@{
    ViewBag.Title = "Index1";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2 style="text-align: center">THÔNG TIN SẢN PHẨM</h2>
    <p>
        @Html.ActionLink("Tạo mới", "Create")
    </p>
    <div style="text-align:center">
        @using (Html.BeginForm("Index1", "Product"))
        {
            <b>Tìm kiếm theo:</b>@Html.RadioButton("seachBy", "NamePro")<text>Tên sản phẩm</text>
            @Html.RadioButton("seachBy", "DecriptionPro")<text>Mô tả</text>
            @Html.RadioButton("seachBy", "None", true)<text>Toàn bộ</text><br />
            @Html.TextBox("seach")<input type="submit" value="Tìm kiếm" />
        }
    </div>

    <table class="table">
        <tr>
            <th>
                <b>Tên sản phẩm</b>
            </th>
            <th>
                <b>Mô tả</b>
            </th>
            <th>
                <b>ID thể loại</b>
            </th>
            <th>
                <b>Giá</b>
            </th>
            <th>
                <b> Hình ảnh</b>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecriptionPro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePro)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
                </td>
            </tr>
        }

    </table>
</body>
</html>

